{
  "name": "jhub_frontend",
  "version": "0.0.1",
  "description": "The frontend of the JHub project",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "pre_build": "jhost",
    "copy-files": "cp ./src/index.html ./dist/index.html",
    "build": "npm run clean && npm run pre_build && npm run copy-files",
    "dev-run": "npm run build && http-server-spa ./dist/",
    "dev": "npm run dev-run",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhost94/JHub_Frontend.git"
  },
  "keywords": [
    "JHub",
    "jhub",
    "frontend",
    "microservice",
    "micro-service",
    "learning",
    "from",
    "scratch"
  ],
  "author": "Jhost",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jhost94/JHub_Frontend/issues"
  },
  "homepage": "https://github.com/jhost94/JHub_Frontend#readme",
  "dependencies": {
    "@jhub-center/jhostify-script": "^0.2.0",
    "http-server": "^14.1.1",
    "http-server-spa": "^1.3.0",
    "tslib": "^2.5.2"
  },
  "devDependencies": {
    "@types/node": "^16.7.13",
    "tslib": "^2.5.2",
    "http-server-spa": "^1.3.0",
    "typescript": "^4.4.2"
  }
